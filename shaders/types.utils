struct PointLight
{
   vec3 position;
   
   // Light values
   vec3 ambient;
   vec3 diffuse;
   vec3 specular;

   // Decay values
   float constant;
   float linear;
   float quadratic;
};

struct LightIncidence
{
	vec3 lightDir; 
 	vec3 vNormal;  	
 	vec3 vViewPosition; 
};